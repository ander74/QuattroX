<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="QuattroX.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:QuattroX"
    xmlns:view="clr-namespace:QuattroX.View"
    Title="Quattro X"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Cargando"
        ContentTemplate="{DataTemplate view:MainPage}"
        FlyoutItemIsVisible="False"
        Route="MainPage" />

    <ShellContent
        Title="Calendario"
        ContentTemplate="{DataTemplate view:CalendarioPage}"
        Route="CalendarioPage" />

    <ShellContent
        Title="Trabajador@s"
        ContentTemplate="{DataTemplate view:WorkersPage}"
        Route="WorkersPage" />


</Shell>
